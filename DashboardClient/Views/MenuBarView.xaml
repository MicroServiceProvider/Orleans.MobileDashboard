<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="DashboardClient.Views.MenuBarView">
	
	<ContentView.Content>
		<Grid ColumnSpacing="0" RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button x:Name="DashboardButton" Grid.Column="0" Grid.RowSpan="4" Text="Dashboard" TextColor="White" BackgroundColor="Navy" Command="{Binding NavigateDashboardCommand}"/>
			<Button x:Name="ClusterMapButton" Grid.Column="1" Grid.RowSpan="4" Text="Map" TextColor="White" BackgroundColor="Navy" Command="{Binding NavigateClusterMapCommand}"/>
			<Button x:Name="HistoryButton" Grid.Column="2" Grid.RowSpan="4" Text="History" TextColor="White" BackgroundColor="Navy" Command="{Binding NavigateHistoryCommand}"/>
			<Button x:Name="SettingsButton" Grid.Column="3" Grid.RowSpan="4" Text="Settings" TextColor="White" BackgroundColor="Navy" Command="{Binding NavigateSettings}"/>
		</Grid>
	</ContentView.Content>
</ContentView>
